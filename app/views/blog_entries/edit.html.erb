<div class="row-fluid">
  <div class="span6">
      <%= form_for @blog_entry, :html => {:class => 'form-horizontal'} do |f| %>
      <legend class="blue-wrap" id="align"> Edit A Blog! </legend>
        <div class="control-group"> 
          <%= f.label :title, :class => 'control-label' %>
          <div class="controls">   
            <%= f.text_field :title, :placeholder => 'title', :class => 'span10' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :body, :class => 'control-label' %>
          <div class="controls">
              <%= f.text_area :body, rows: '5', placeholder: 'body',class: 'span10' %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.submit 'Save', class: "btn btn-default btn-primary" %>
        </div>
      <% end %>
  </div>
</div>
